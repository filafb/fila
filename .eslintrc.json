{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["stylelint", "eslint:recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "padding-line-between-statements": "off"
  }
}
